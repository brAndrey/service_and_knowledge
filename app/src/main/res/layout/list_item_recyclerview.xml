<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/personNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="personNameView" />

    <TextView
        android:id="@+id/personAdressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="personAdressView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personSexView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="personSexView" />

        <TextView
            android:id="@+id/personAgeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="personAgeView" />
    </LinearLayout>
</LinearLayout>